<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4 mx-auto">
      <div class="header">
        <img class="messaging-logo" src="https://cdn.iconscout.com/icon/free/png-256/slack-1425877-1205068.png" alt="slack-logo" />
        <h2 class="text-center">Slack Clone</h2>
      </div>
      <hr>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="form-inputs">
            <%= f.input :nickname,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "Nickname", placeholder: "Username" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", placeholder: "********" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

        <div class="form-actions">
          <%= f.button :submit, "Enter Chat", class: "btn btn-danger" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
